    <div class="landing">
        <div class="col-12" style="text-align: center">
            <div class="col-4">
                @ViewBag.Message
            </div>
            <span class="col-4">
                <img class="dodgerblue center-img" src="~/images/Bookshop2.svg" alt="bookshop" />
            </span>
            <div class="col-4">
                @ViewBag.Message
            </div>
        </div>
        <div class="col-12 center-text">
            <p>Original, quality wiriting from the public. These features connect writers directly to their</p>
